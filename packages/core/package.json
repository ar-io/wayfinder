{
  "name": "@ar.io/wayfinder-core",
  "version": "0.0.1",
  "description": "WayFinder core library for intelligently routing to optimal AR.IO gateways",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "license": "Apache-2.0",
  "keywords": ["ar-io", "arweave", "wayfinder", "ar://"],
  "author": "Permanent Data Solutions, Inc.",
  "publishConfig": {
    "access": "public"
  },
  "files": ["dist", "package.json", "README.md", "LICENSE"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "test:unit": "c8 node --import=../../register.mjs --test --enable-source-maps --trace-warnings 'src/**/*.test.ts'",
    "lint:fix": "biome check --write --unsafe",
    "lint:check": "biome check --unsafe",
    "format:fix": "biome format --write",
    "format:check": "biome format"
  },
  "dependencies": {
    "arweave": "^1.14.0",
    "eventemitter3": "^5.0.1",
    "plimit-lit": "^3.0.1",
    "rfc4648": "^1.5.4"
  },
  "peerDependencies": {
    "@ar.io/sdk": ">=3.12.0"
  },
  "devDependencies": {
    "@ar.io/sdk": "^3.13.0",
    "@types/node": "^24.0.0"
  }
}
