{
  "name": "@ar.io/wayfinder",
  "version": "0.0.1",
  "description": "WayFinder core library for intelligently routing to optimal AR.IO gateways",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "rimraf dist",
    "test:unit": "c8 node --import=../../register.mjs --test --enable-source-maps --trace-warnings 'src/**/*.test.ts'",
    "lint:fix": "biome check --write --unsafe",
    "lint:check": "biome check --unsafe",
    "format:fix": "biome format --write",
    "format:check": "biome format"
  },
  "dependencies": {
    "arweave": "^1.14.0",
    "eventemitter3": "^5.0.1",
    "rfc4648": "^1.5.4"
  },
  "peerDependencies": {
    "@ar.io/sdk": ">=3.12.0"
  },
  "devDependencies": {
    "@ar.io/sdk": "^3.13.0",
    "@types/node": "^20.12.12",
    "biome": "^1.9.4",
    "c8": "^10.1.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "ar-io",
    "arweave",
    "wayfinder",
    "ar://"
  ],
  "author": "AR.IO",
  "license": "Apache-2.0"
}
