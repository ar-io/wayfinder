{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "strict": true,
    "lib": ["dom", "es2015"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": ["src"]
}
